@model IEnumerable<Era_sphere.Areas.AreaConfiguracion.Models.Servicios.TipoServicioView>
@using Era_sphere.Areas.AreaHoteles.Models
@using Telerik.Web.Mvc.UI

@{
    ViewBag.Title = "TipoServiciosIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<object> sn = new List<object> { new { ID = 1, nombre = "Si" }, new { ID = 0, nombre = "No" } };
}


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="block big" style="position: relative">
    <!-- Block Begin -->
    <div class="titlebar">
        <h3>
            Mantenimento de Tipos de Servicios
        </h3>
    </div>
    <div class="block_cont">
        @{Html.Telerik().Grid(Model)
        .Name("TipoServicioGrid")
        .Localizable("es-ES")
        .Filterable()
        .ToolBar(commands => commands.Insert())
        .Editable(editing => editing
                            .Mode(GridEditMode.PopUp)
                            .TemplateName("TipoServicioViewTemplate"))

        .DataKeys(key => key.Add(c => c.ID))
        .Columns(columns =>
        {
            columns.Bound(c => c.nombre);
            columns.ForeignKey(c => c.tiene_productos_asociados, new SelectList(sn, "ID", "nombre")).HtmlAttributes(new { style = "text-align:center" }).Title("Productos");
            columns.ForeignKey(c => c.tiene_repeticiones, new SelectList(sn, "ID", "nombre")).HtmlAttributes(new { style = "text-align:center" }).Title("Repeticiones");
            columns.Bound(c => c.campo1).Title("Campo 1");
            columns.Bound(c => c.campo2).Title("Campo 2");
            columns.Bound(c => c.campo3).Title("Campo 3");
            columns.Command(commands =>
            {
                commands.Edit().ButtonType(GridButtonType.Image);
              commands.Delete().ButtonType(GridButtonType.Image);
            });
        })
        .Pageable()
        .Sortable()


        .DataBinding(dataBinding => dataBinding
            .Ajax()
            .Select("Select", "TipoServicio")
            .Insert("Insert", "TipoServicio")
            .Delete("Delete", "TipoServicio")
            .Update("Update", "TipoServicio")
        ).Render();
        }

    <!-- Table Wrapper End -->
</div>
