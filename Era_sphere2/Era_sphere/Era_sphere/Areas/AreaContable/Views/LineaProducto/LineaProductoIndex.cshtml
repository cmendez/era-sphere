@{
    ViewBag.Title = "LineaProductoIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //int[] checkedRecords = (int[])ViewData["checkedRecords"]; 
}
@using Era_sphere.Areas.AreaContable.Models
@model IEnumerable<LineaProductoView>
@using Telerik.Web.Mvc.UI

<div class="block big" style="position: relative">
    <!-- Block Begin -->
    <div class="titlebar">
        <h3>
            Lineas de productos
        </h3>
    </div>
    <div class="block_cont">
        @(Html.Telerik().Grid(Model)
        .Name("LineaProductoGrid")
        .Filterable()
        .Localizable("es-ES")
        .ToolBar(commands => commands.Insert())
        .Editable(editing => 
                    editing
                        .Mode(GridEditMode.InLine)
                        //.TemplateName("LineaProductoViewTemplate")
                  )

        .DataKeys(key => key.Add(c => c.ID))
        .Columns(columns =>
        {
            
            //columns.Bound(p => p.ID);
            columns.Bound(p => p.descripcion);
            columns.Command(commands =>
            {
                commands.Edit().ButtonType(GridButtonType.Image);
                commands.Delete().ButtonType(GridButtonType.Image);
            });
        })

        .Pageable()
        .Sortable()


        .DataBinding(dataBinding => dataBinding
            .Ajax()
            .Select("Select", "LineaProducto")
            .Insert("Insert", "LineaProducto")
            .Delete("Delete", "LineaProducto")
            .Update("Update", "LineaProducto")
        )
           )

    </div>
    <!-- Table Wrapper End -->
</div>
