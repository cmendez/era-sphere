@model Era_sphere.Areas.AreaContable.Models.Ordenes.OrdenLineaView
           
@using Era_sphere.Areas.AreaContable.Models;
@using Era_sphere.Generics;
@using Telerik.Web.Mvc.UI
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@{
    List<Producto> pds = (new EraSphereContext()).productos.ToList();
    //List<Proveedor> pvs = (new EraSphereContext()).proveedores.ToList();
}
@using (Html.BeginForm())
{
   
    @Html.ValidationSummary(true)
    <fieldset>
        <legend></legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.productoID)
        </div>
        @( Html.Telerik().DropDownList()
                    .Name("productoID")
                    .BindTo(new SelectList(pds, "ID", "descripcion"))
                    .Placeholder("Seleccione...")
                    .CascadeTo("proveedorID")
               )

        <div class="editor-label">
            @Html.LabelFor(model => model.proveedorID)
        </div>
        @( Html.Telerik().DropDownList()
                    .Name("proveedorID")
                    .DataBinding(binding => binding.Ajax().Select("_GetDropDownListProveedores", "Ordenes"))
                    .Placeholder("Seleccione...")
                    .CascadeTo("precioProv")
               )


        <div class="editor-label">
            @Html.LabelFor(model => model.precioFacturado)
        </div>
        @( Html.Telerik().DropDownList()
                    .Name("precioProv")
                    .DataBinding(binding => binding.Ajax().Select("_GetDropDownListPrecio", "Ordenes"))
                    .SelectedIndex(0)
               )

        <div class="editor-label">
            @Html.LabelFor(model => model.cantidad)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.cantidad)
            @Html.ValidationMessageFor(model => model.cantidad)
        </div>

    </fieldset>
}

