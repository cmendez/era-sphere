@model Era_sphere.Areas.AreaContable.Models.ProductoView
@using Era_sphere.Generics;
@using Era_sphere.Areas.AreaContable.Models
@using Telerik.Web.Mvc.UI
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@{
    List<LineaProducto> lps = (new EraSphereContext()).lineasproducto.ToList();    
}

@using (Html.BeginForm())
{
    
    @Html.ValidationSummary(true)
    <fieldset>
    
        <legend></legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.lineaProductoID)
        </div>
        @( Html.Telerik().DropDownList()
                    .Name("lineaProductoID")
                    .BindTo(new SelectList(lps, "ID", "descripcion"))
                    .Placeholder("Seleccione...")
               )

        <div class="editor-label">
            @Html.LabelFor(model => model.descripcion)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.descripcion)
            @Html.ValidationMessageFor(model => model.descripcion)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.isPerecible)
        </div>
        <div class="editor-field">
            @Html.CheckBoxFor(model => model.isPerecible)
            @Html.ValidationMessageFor(model => model.isPerecible)
        </div>

@*        <div class="editor-field">
            @Html.EditorFor(model => model.isPerecible)
            @Html.ValidationMessageFor(model => model.isPerecible)
        </div>*@

        <div class="editor-label">
            @Html.LabelFor(model => model.diasPerecible)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.diasPerecible)
            @Html.ValidationMessageFor(model => model.diasPerecible)
        </div>

        <div class="editor-label">
            Unidad de medida<br />
            <i>(p.e. CAJAX25, BOLSAX10, GR., LATAS, BIDON)</i>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.unidadMedidad)
            @Html.ValidationMessageFor(model => model.unidadMedidad)
        </div>

    </fieldset>
}