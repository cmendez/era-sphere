@model IEnumerable<AdicionalView>
@using Era_sphere.Areas.AreaEventos.Models.Adicionales
@using Era_sphere.Generics;
@using Telerik.Web.Mvc.UI
@{
    ViewBag.Title = "EventoAdicionalView";
    var idhotel = ViewData["idhotel"];
}

 @(Html.Telerik().Grid(Model)
        .Name("EventoAdicional")
        .Localizable("es-ES")
        .Filterable()
        .ToolBar(commands => commands.Insert())
        .Editable(editing => editing
                          .Mode(GridEditMode.InLine)
                        .TemplateName("AdicionalViewTemplate"))
        .DataKeys(key => key.Add(c => c.ID))
        .Columns(columns =>
        {
            columns.Bound(p => p.ID);
            columns.Bound(p => p.nombre);
            columns.Bound(p => p.precio);
            //columns.ForeignKey(p => p.id_estado, new SelectList(estados, "ID", "descripcion"));
            columns.Command(commands =>
            {
                commands.Edit().ButtonType(GridButtonType.Image);
                commands.Delete().ButtonType(GridButtonType.Image);
                //commands.Custom("mostrar_natural").Text("Mostrar").
                //DataRouteValues(route => route.Add(o => o.ID).RouteKey("id")).Ajax(true).Action("MostrarNatural", "Cliente");

            }).Width(160);
        })

        .Pageable()
        .Sortable()
         //.ClientEvents(events => events.OnComplete("onComplete"))
                .DataBinding(dataBinding => dataBinding
                         .Ajax()//.Select("_CustomCommand", "Cliente")
                    .Select("VerAdicionales", "Evento", new { idhotel = idhotel })
                    .Insert("InsertAdicional", "Evento", new { idhotel = idhotel })
                    .Delete("DeleteAdicional", "Evento", new { idhotel = idhotel })
                    .Update("UpdateAdicional", "Evento", new { idhotel = idhotel })
        )
           )


    
           
    