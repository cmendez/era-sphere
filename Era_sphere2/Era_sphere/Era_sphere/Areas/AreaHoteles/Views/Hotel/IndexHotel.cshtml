
@using Era_sphere.Areas.AreaHoteles.Models
@using Era_sphere.Generics;
@model IEnumerable<HotelView>
@using Telerik.Web.Mvc.UI

@{
    ViewBag.Title = "IndexHotel";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //var paises = (new EraSphereContext()).paises.ToList();
    //var ciudades = (new EraSphereContext()).ciudades.ToList();
    //var provincias = (new EraSphereContext()).provincias.ToList();
}


<div class="block big" style="position: relative">
    <!-- Block Begin -->
    <div class="titlebar">
        <h3>
            Mantenimento de Hoteles
        </h3>
    </div>
    <div class="block_cont">
        @(Html.Telerik().Grid(Model)
        .Name("HotelesGrid")
        .Localizable("es-ES")
        .Filterable()
        .ToolBar(commands => commands.Insert())
        .Editable(editing => editing
                            .Mode(GridEditMode.PopUp)
                            .TemplateName("HotelViewTemplate"))

        .DataKeys(key => key.Add(c => c.ID))
        .Columns(columns =>
        {
            columns.Bound(p => p.ID);
            columns.Bound(p => p.descripcion);
            columns.Bound(p => p.razon_social);
            //  columns.Bound(p => p.pais_nombre);
            //  columns.Bound(p => p.ciudad_nombre);
            //columns.Bound(p => p.provincia);
            columns.Bound(p => p.pais_nombre);
            columns.Bound(p => p.ciudad_nombre);
            columns.Bound(p => p.provincia_nombre);
            columns.Command(commands =>
            {
                commands.Edit().ButtonType(GridButtonType.Image);
             //   commands.Delete().ButtonType(GridButtonType.Image);
            });
        })

        .Pageable()
        .Sortable()
        

        .DataBinding(dataBinding => dataBinding
            .Ajax()
            .Select("Select", "Hotel")
            .Insert("Insert", "Hotel")
            .Delete("Delete", "Hotel")
            .Update("Update", "Hotel")
        )
           )

    </div>
    <!-- Table Wrapper End -->
</div>