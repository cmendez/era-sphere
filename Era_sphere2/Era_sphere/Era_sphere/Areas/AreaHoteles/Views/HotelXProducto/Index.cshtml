
@using Era_sphere.Areas.AreaHoteles.Models.HotelXProductoNM;
@using Era_sphere.Generics;
@model IEnumerable<HotelXProductoView>
@using Telerik.Web.Mvc.UI

@{
    ViewBag.Title = "IndexHotelXProducto";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var hotelID = ViewData["hotelID"];
}


<div class="block big" style="position: relative">
    <!-- Block Begin -->
    <div class="titlebar">
        <h3>
            <i>Precios de productos</i>
        </h3>
    </div>
    <div class="block_cont">
        <p> Hotel @ViewData["hotel"] </p>   
        @(Html.Telerik().Grid(Model)
        .Name("HotelXProductoGrid")
        .Localizable("es-ES")
        .Filterable()
        .ToolBar(commands => commands.Insert())
        .Editable(editing => editing
                            .Mode(GridEditMode.PopUp)
                            .TemplateName("HotelXProductoViewTemplate"))

        .DataKeys(key => key.Add(v => v.ID))
        .Columns(columns =>
        {
            columns.Bound(v => v.producto_str);
            columns.Bound(v => v.moneda_str);
            columns.Bound(v => v.precio);
            columns.Command(commands =>
            {
                commands.Edit().ButtonType(GridButtonType.Image);
                commands.Delete().ButtonType(GridButtonType.Image);
            });
        })

        .Pageable()
        .Sortable()


        .DataBinding(dataBinding => dataBinding
            .Ajax()
            .Select("Select", "HotelXProducto", new { id = @hotelID })
            .Insert("Insert", "HotelXProducto", new { id = @hotelID })
            .Delete("Delete", "HotelXProducto", new { id_hotel = @hotelID })
            .Update("Update", "HotelXProducto", new { id_hotel = @hotelID })
        )
           )

    </div>
    <!-- Table Wrapper End -->
</div>