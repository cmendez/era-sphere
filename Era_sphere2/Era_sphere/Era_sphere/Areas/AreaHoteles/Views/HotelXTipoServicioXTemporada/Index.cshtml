
@using Era_sphere.Areas.AreaHoteles.Models.HotelXServicioXTemporadaNM;
@using Era_sphere.Generics;
@model IEnumerable<HotelXTipoServicioXTemporadaView>
@using Telerik.Web.Mvc.UI

@{
    ViewBag.Title = "IndexHotelXTipoServicioXTemporada";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var hotelID = ViewData["hotelID"];
}


<div class="block big" style="position: relative">
    <!-- Block Begin -->
    <div class="titlebar">
        <h3>
            Precios de servicios
        </h3>
    </div>
    <div class="block_cont">
        <p> Hotel @ViewData["hotel"] </p>   
        @(Html.Telerik().Grid(Model)
        .Name("HotelXTipoServicioXTemporadaGrid")
        .Localizable("es-ES")
        .Filterable()
        .ToolBar(commands => commands.Insert())
        .Editable(editing => editing
                            .Mode(GridEditMode.PopUp)
                            .TemplateName("HotelXTipoServicioXTemporadaViewTemplate"))

        .DataKeys(key => key.Add(v => v.ID))
        .Columns(columns =>
        {
            columns.Bound(v => v.tipo_servicio_descripcion);
            //columns.Bound(v => v.tt_desc);
            columns.Bound(v => v.t_desc);
            columns.Bound(v => v.precio);
            columns.Command(commands =>
            {
                commands.Edit().ButtonType(GridButtonType.Image);
                commands.Delete().ButtonType(GridButtonType.Image);
            });
        })

        .Pageable()
        .Sortable()


        .DataBinding(dataBinding => dataBinding
            .Ajax()
                    .Select("Select", "HotelXTipoServicioXTemporada", new { id = @hotelID })
                    .Insert("Insert", "HotelXTipoServicioXTemporada", new { id = @hotelID })
                    .Delete("Delete", "HotelXTipoServicioXTemporada", new { id_hotel = @hotelID })
                    .Update("Update", "HotelXTipoServicioXTemporada", new { id_hotel = @hotelID })
        )
           )

    </div>
    <!-- Table Wrapper End -->
</div>