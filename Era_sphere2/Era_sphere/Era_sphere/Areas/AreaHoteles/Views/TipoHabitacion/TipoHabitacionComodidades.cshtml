@using Telerik.Web.Mvc.UI
@using Era_sphere.Areas.AreaHoteles.Models.Habitaciones
@model IEnumerable<ComodidadView>


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "TipoHabitacionComodidades";
    
}
<div class="block big" style="position: relative">
    <!-- Block Begin -->
    <div class="titlebar">
        <h3>
            Mantenimento de tipos de habitacion
        </h3>
    </div>
    <div class="block_cont">
@(Html.Telerik().Grid(Model)
        .Name("ComodidadesGrid")
        .Filterable()
        .Localizable("es-ES")
        .ToolBar(commands => commands.Insert())
        .DataKeys(key => key.Add(c => c.ID))
        .Editable(editing => editing
                            .Mode(GridEditMode.PopUp)
                            .TemplateName("BuscarComodidades")
                            
                            )
        .Columns(columns =>
        {
            columns.Bound(p => p.ID);
            columns.Bound(p => p.descripcion);
            columns.Command(commands =>
            {
                //commands.Edit().ButtonType(GridButtonType.Image);
                commands.Delete().ButtonType(GridButtonType.Image);
                
            });
        })
        .Pageable()
        .Sortable()
                .DataBinding(dataBinding => dataBinding
            .Ajax()
        //    .Select("Select", "TipoHabitacion")
            .Insert("Insert", "Comodidades")
            .Delete("Delete", "Comodidades")
        )
           
)
</div>
    <!-- Table Wrapper End -->
</div>

