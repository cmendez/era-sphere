﻿@using Era_sphere.Areas.AreaReportes.Models.ReporteCliente;
   @model List<ReporteCliente>
   <br />
   <table cellpadding="3" cellspacing="3">
       <tr border="1" bgcolor="#777777" color="#ffffff">
           <td width="50%" align="center">
              Nombre
           </td>
           <td width="50%" align="center">
              Identificador
           </td>
           <td width="60%" align="center">
              Usuario
           </td>
           <td width="50%" align="center">
              Tarjeta del Cliente
           </td>
           <td width="40%" align="center">
              Habitación asignada
          </td>
          <td width="30%" align="center">
              Puntos
          </td>          
          <td width="35%" align="center">
              Número de Reservas
          </td>
          
      </tr>
      @{
           var OddColor = "#DDEEEE";
           var evenColor = "#EEFFFF";
           var Odd = OddColor;
       }
       @foreach (ReporteCliente rc in Model)
       {
           <tr border="1" bgcolor="@Odd">
               <td align="center">@(rc.nombre + rc.razon_social)
               </td>
               <td align="center">@(rc.ruc + rc.documento_identidad)
               </td>
               <td align="center">@rc.usuario
               </td>
               <td align="center">@rc.tarjeta_cliente
               </td>
               <td align="center">@rc.habitacion_asignada
               </td>
               <td align="center">@rc.puntos_cliente
               </td>
               <td align="center">@rc.numero_reservas
               </td>
        
           </tr>
           if (Odd == OddColor)
           {
               Odd = evenColor;
           }
           else
           {
               Odd = OddColor;
           }
   
       }
   </table>