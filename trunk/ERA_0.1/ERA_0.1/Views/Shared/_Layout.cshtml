<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>
<body>
    <div id="wrapper">
        <div id="header">
            <h1>My MVC Application</h1>
        </div>
        <div id="menu">
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Home2", "Index", "Home")</li>
                    <li id="last">@Html.ActionLink("About2", "About", "Home")</li>
                </ul>
            </nav>
        </div>
        <div id="page">
            <div id="page-bgtop">
                <div id="page-bgbtm">
                    <div id="sidebar">
                        <ul id="submenu">
                            <li>@Html.ActionLink("Home 1", "Index", "Home")</li>
                            <li>@Html.ActionLink("Home 2", "About", "Home")</li>
                            <li>@Html.ActionLink("Home 3", "Index", "Home")</li>
                            <li>@Html.ActionLink("Home 4", "About", "Home")</li>
                        </ul>
                    </div>
                    <div id="content-top">
                        <div id="content-btm">
                            @RenderBody()
                        </div>
                    </div>
                    <div style="clear: both;"></div>
                </div>
            </div>
        </div>
        <div id="footer">
            <div id="footer-le">
                <p>Resort Solutions, 2012</p>
            </div>
            <div id="footer-ri">
                <a href="mailto:werquinigo@pucp.pe">Comuniquese con nosotros</a>
            </div>
        </div>
    </div>
</body>
</html>
