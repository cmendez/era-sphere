@model Era_sphere.Areas.AreaClientes.Models.ClienteJuridicoView
@using Era_sphere.Generics
@using Era_sphere.Areas.AreaClientes.Models
@using Telerik.Web.Mvc.UI
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div id="detalle-cliente-juridico">

    <fieldset>
        <legend>Cliente Juridico</legend>
        
        <div class="editor-label"> @Html.LabelFor(model => model.razon_social) </div>
        <div class="editor-field">
            <input class="text-box single-line" type="text" id="_razon_social" readonly="readonly"/>
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.ruc)
        </div>
        <div class="editor-field">
            <input class="text-box single-line" type="text" id="_ruc" readonly="readonly"/>
        </div>

        <div class="editor-label"> @Html.LabelFor(model => model.paisID) </div>
        <div class="editor-field">
            <input class="text-box single-line" type="text" id="_paisID" readonly="readonly"/>
        </div>

         <div class="editor-label"> @Html.LabelFor(model => model.ciudadID) </div>
         <div class="editor-field">
            <input class="text-box single-line" type="text" id="_ciudadID" readonly="readonly"/>
        </div>

         <div class="editor-label">
            @Html.LabelFor(model => model.telefono)
        </div>
        <div class="editor-field">
            <input class="text-box single-line" type="text" id="_telefono" readonly="readonly"/>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.celular)
        </div>
        <div class="editor-field">
            <input class="text-box single-line" type="text" id="_celular" readonly="readonly"/>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.direccion)
        </div>
        <div class="editor-field">
            <input class="text-box single-line" type="text" id="_direccion" readonly="readonly"/>
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.correo_electronico)
        </div>
        <div class="editor-field">
            <input class="text-box single-line" type="text" id="_correo_electronico" readonly="readonly"/>
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.id_estado)
        </div>
         <div class="editor-field">
            <input class="text-box single-line" type="text" id="_id_estado" readonly="readonly"/>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.numero_reservas)
        </div>
        <div class="editor-field">
            <input class="text-box single-line" type="text" id="_numero_reservas" readonly="readonly"/>
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.usuario)
        </div>
        <div class="editor-field">
            <input class="text-box single-line" type="text" id="_usuario" readonly="readonly"/>
        </div>
              <div class="editor-label">
            @Html.LabelFor(model => model.tarjeta_cliente)
        </div>
        <div class="editor-field">
            <input class="text-box single-line" type="text" id="_tarjeta_cliente" readonly="readonly"/>
        </div>

        
          </fieldset>
        <button id="Mostrar-Detalle" class="t-button t-state-default">Mostrar Detalle</button>
      
        @(Html.Telerik().Window().Name("MostrarDetallePopup")
        .Title("Detalle de consumo de Cliente").LoadContentFrom("DetalleCliente", "Cliente")
            .Modal(true)
            .Visible(false)
            .Width(300))


         </div>

@{ Html.Telerik().ScriptRegistrar()
        .OnDocumentReady(@<text>
            
            $('#Mostrar-Detalle')
                .click(function(e) {
                    e.preventDefault();
                    $('#MostrarDetallePopup').data('tWindow').center().open();
                });
            $('.t-button').live('mouseenter', $.telerik.buttonHover)
                            .live('mouseleave', $.telerik.buttonLeave);
        </text>); }
