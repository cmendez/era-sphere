@{
    ViewBag.Title = "ServiciosIndex";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}
@using Era_sphere.Areas.AreaConfiguracion.Models.Servicios
@model IEnumerable<ServicioView>
@using Telerik.Web.Mvc.UI

<div class="block big" style="position: relative">
    <!-- Block Begin -->
    <div class="titlebar">
        <h3>
            Servicios
        </h3>
    </div>
    <div class="block_cont">
        @(Html.Telerik().Grid(Model)
        .Name("TipoTemporadaGrid")
        .Localizable("es-ES")
        .Filterable()
        .ToolBar(commands => commands.Insert())
        .Editable(editing => editing
                            .Mode(GridEditMode.PopUp)
                            .TemplateName("ServicioViewTemplate"))

        .DataKeys(key => key.Add(c => c.ID))
        .Columns(columns =>
        {
            columns.Bound(p => p.detalle);
            columns.Command(commands =>
            {
                commands.Edit().ButtonType(GridButtonType.Image);
                commands.Delete().ButtonType(GridButtonType.Image);
            });
        })

        .Pageable()
        .Sortable()


        .DataBinding(dataBinding => dataBinding
            .Ajax()
            .Select("Select", "Servicio")
            .Insert("Insert", "Servicio")
            .Delete("Delete", "Servicio")
            .Update("Update", "Servicio")
        )
           )

    </div>
    <!-- Table Wrapper End -->
</div>
