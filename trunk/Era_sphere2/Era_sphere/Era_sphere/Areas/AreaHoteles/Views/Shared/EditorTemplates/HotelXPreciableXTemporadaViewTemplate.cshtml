@model Era_sphere.Areas.AreaHoteles.Models.HotelXPreciableXTemporadaNM.HotelXPreciableXTemporadaView
@using Era_sphere.Areas.AreaConfiguracion.Models.Temporada;
@using Telerik.Web.Mvc.UI
@using Era_sphere.Areas.AreaCargos.Models;
<script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@{
    List<TipoTemporada> tts = (new LogicaTipoTemporada()).retornarTodos();
    List<Preciable> ps = null;
}
@using (Html.BeginForm())
{
   
    @Html.ValidationSummary(true)
    <fieldset>
        <legend></legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.preciable_descripcion)
        </div>
        @( Html.Telerik().DropDownList()
                    .Name("DropDownList_Temporadas")
                    .DataBinding(binding => binding.Ajax().Select("_GetDropDownListTemporadas", "HotelXPreciableXTemporada"))
                    .Placeholder("Seleccione...")
               )

        <div class="editor-label">
            @Html.LabelFor(model => model.tt_desc)
        </div>
        @( Html.Telerik().DropDownList()
                    .Name("DropDownList_tipoTemporada")
                    .BindTo(new SelectList(tts, "ID", "descripcion"))
                    .Placeholder("Seleccione...")
                    .CascadeTo("DropDownList_Temporadas")
                )

        <div class="editor-label">
            @Html.LabelFor(model => model.t_desc)
        </div>
        @( Html.Telerik().DropDownList()
                    .Name("DropDownList_Temporadas")
                    .DataBinding(binding => binding.Ajax().Select("_GetDropDownListTemporadas", "HotelXPreciableXTemporada"))
                    .Placeholder("Seleccione...")
               )



        <div class="editor-label">
            @Html.LabelFor(model => model.precio)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.precio)
            @Html.ValidationMessageFor(model => model.precio)
        </div>

    </fieldset>
}