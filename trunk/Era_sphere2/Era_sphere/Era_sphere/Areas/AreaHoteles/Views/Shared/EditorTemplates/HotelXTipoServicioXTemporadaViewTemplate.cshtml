@model Era_sphere.Areas.AreaHoteles.Models.HotelXServicioXTemporadaNM.HotelXTipoServicioXTemporadaView
@using Era_sphere.Areas.AreaConfiguracion.Models.Temporada;
@using Era_sphere.Areas.AreaHoteles.Models.HotelXServicioXTemporadaNM
@using Era_sphere.Areas.AreaConfiguracion.Models.Servicios;
@using Telerik.Web.Mvc.UI
@using Era_sphere.Areas.AreaCargos.Models;
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@{
    LogicaTipoTemporada ltt = new LogicaTipoTemporada();
    List<TipoTemporada> tts = ltt.retornarTodos();
    List<TipoServicioView> ss = (new LogicaServicios()).retornarTipoServicios();
    }
@using (Html.BeginForm())
{
   
    @Html.ValidationSummary(true)
    <fieldset>
        <legend></legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.tipo_servicioID)
        </div>
        @( Html.Telerik().DropDownList()
                    .Name("tipo_servicioID")
                    .BindTo(new SelectList(ss,"ID","descripcion"))
                    .Placeholder("Seleccione...")
               )

        <div class="editor-label">
            Tipo de temporada:
        </div>
        @( Html.Telerik().DropDownList()
                    .Name("DropDownList_tipoTemporada")
                    .BindTo(new SelectList(tts, "ID", "descripcion"))
                    .Placeholder("Seleccione...")
                    .CascadeTo("temporadaID")
                )

        <div class="editor-label">
            @Html.LabelFor(model => model.temporadaID)
        </div>
        @( Html.Telerik().DropDownListFor(model => model.temporadaID)
                    .Name("temporadaID")
                    .DataBinding(binding => binding.Ajax().Select("_GetDropDownListTemporadas", "HotelXTipoServicioXTemporada"))
                    .Placeholder("Seleccione...")
               )

        <div class="editor-label">
            @Html.LabelFor(model => model.precio)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.precio)
            @Html.ValidationMessageFor(model => model.precio)
        </div>

    </fieldset>
}