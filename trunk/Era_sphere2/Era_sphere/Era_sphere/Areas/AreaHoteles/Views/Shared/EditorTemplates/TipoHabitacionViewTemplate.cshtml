@model Era_sphere.Areas.AreaHoteles.Models.TipoHabitacionView
@using Era_sphere.Areas.AreaHoteles.Models
@using Telerik.Web.Mvc.UI
@using Era_sphere.Areas.AreaHoteles.Models.Habitaciones
@{  
    ViewBag.Title = "TipoHabitacionEditView";
    var id = Model.ID;
    TipoHabitacion tipo_habitacion = (new Era_sphere.Generics.EraSphereContext()).tipos_habitacion.Find(id);
    
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
    
        
        <div class="editor-label">
            @Html.LabelFor(model => model.descripcion)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.descripcion)
            @Html.ValidationMessageFor(model => model.descripcion)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.cap_max_personas)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.cap_max_personas)
            @Html.ValidationMessageFor(model => model.cap_max_personas)
        </div>
        
     </fieldset>
            
}
@if(Model.comodidades_id!=null){
        <div class="block_cont">
            @(Html.Telerik().Grid(tipo_habitacion.getComodidades())
            .Name("comodidadesGrid")
            .Filterable()
            .Localizable("es-ES")
            .Columns(columns =>
            {

                columns.Bound(p=>p.descripcion);
            })

            .Pageable()
            .Sortable()

               )
        </div>
}